<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="<%= article.title %>" required  name="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" class="form-control" id="description" ><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea type="text" required  name="markdown" id="markdown" class="form-control" cols="30" rows="10"><%= article.markdown %></textarea>
</div>
<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
